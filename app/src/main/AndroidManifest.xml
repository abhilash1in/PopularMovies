<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhilash.popularmoviesstage1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.FavouritesActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.FavouriteDetailOfflineActivity"
            android:parentActivityName=".Activities.FavouritesActivity" />
        <activity android:name=".Activities.DetailActivity"></activity>
    </application>

</manifest>